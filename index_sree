<script>
const messages=[
 "Please don't do this ðŸ’­",
 "I am yours â¤ï¸",
 "Please no ðŸ™",
 "Sorry, you can't select NO ðŸ˜†"
];

let i=0;
let noScale=1;
let yesScale=1;

const noContainer=document.getElementById("noContainer");
const msg=document.getElementById("msg");
const noBtn=document.getElementById("noBtn");
const yesBtn=document.getElementById("yesBtn");

noContainer.addEventListener("click",()=>{
    moveNo();

    if(i<messages.length){
        msg.innerText=messages[i++];
    }

    // NO becomes smaller
    noScale -= 0.15;
    noBtn.style.transform = `scale(${noScale})`;

    // YES becomes bigger
    yesScale += 0.15;
    yesBtn.style.transform = `scale(${yesScale})`;
});

function moveNo(){
    const x=Math.random()*(innerWidth-200);
    const y=Math.random()*(innerHeight-200);
    noContainer.style.position="fixed";
    noContainer.style.left=x+"px";
    noContainer.style.top=y+"px";
}

function goYes(){
    window.location.href="yes.html";
}
</script>

